generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  CREATED
  PROCESSING
  SHIPPING
  DELIVERED
}

model Product {
  id         Int        @id @default(autoincrement())
  name       String
  status     Status
  categories Category[]
  Order      Order[]
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  Product     Product? @relation(fields: [productId], references: [id])
  productId   Int?
}

model Order {
  id          Int       @id @default(autoincrement())
  description String
  status      Status
  oldStatus   Status[]
  products    Product[]
}
